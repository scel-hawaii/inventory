<p id="notice"><%= notice %></p>

<div>
    <h1>Inventory <small><%=@category_name%></small> </h1>
    <span class='pull-right'><p><%= link_to 'Add New Item', new_item_path %></p></span>
</div>

<table class="table table-bordered table-striped table-condensed">
  <thead>
    <tr>
      <th>Name</th>
      <th>Type</th>
      <th>Location</th>
      <th>Compartment</th>
      <th>Quantity</th>
      <th>Manufacturer</th>
      <th>Distributor</th>
    </tr>
  </thead>

  <tbody>
    <% @items.each do |item| %>
      <tr>
        <td><%= link_to item.name, item%></td>
        <td><%= item.item_type %></td>
        <td><%= item.location %></td>
        <td><%= item.compartment %></td>
        <td><%= item.quantity %></td>
        <td><%= item.manufacturer %></td>
        <td><%= item.distributor %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

