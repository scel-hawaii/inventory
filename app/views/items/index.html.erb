<p id="notice"><%= notice %></p>

<h1>Listing Items</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Location</th>
      <th>Compartment</th>
      <th>Type</th>
      <th>Description</th>
      <th>Quantity</th>
      <th>Manufacturer</th>
      <th>Distributor</th>
      <th>Notes</th>
      <th>Image url</th>
      <th>Manual url</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @items.each do |item| %>
      <tr>
        <td><%= item.name %></td>
        <td><%= item.location %></td>
        <td><%= item.compartment %></td>
        <td><%= item.type %></td>
        <td><%= item.description %></td>
        <td><%= item.quantity %></td>
        <td><%= item.manufacturer %></td>
        <td><%= item.distributor %></td>
        <td><%= item.notes %></td>
        <td><%= item.image_url %></td>
        <td><%= item.manual_url %></td>
        <td><%= link_to 'Show', item %></td>
        <td><%= link_to 'Edit', edit_item_path(item) %></td>
        <td><%= link_to 'Destroy', item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

