<h1>View By Category</h1>

<table class="table table-bordered table-striped table-condensed">
  <thead>
    <tr>
        <th>Category</th>
        <th>Description</th>
    </tr>
  </thead>
  <tbody>
    <% @categories.each do |category| %>
    <tr>
        <td>
            <a href="/items?category_is=<%=category.name%>">
                <%=category.name%>
            </a>
        </td>
        <td><%=category.description%></td>
    </tr>
    <% end %>
  </tbody>
</table>
